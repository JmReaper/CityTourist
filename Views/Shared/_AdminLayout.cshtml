<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityTourist</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <header>
    </header>
    <div class="container flex min-h-screen bg-gradient-to-t from-slate-900 to-gray-900 min-h-screen ">

        <!-- Sidebar -->
        @await Component.InvokeAsync("SideBar")
        <!-- Main Content -->
        <main class="flex-1 p-4 lg:ml-64  lg:pt-5">
            @RenderBody()
        </main>
    </div>
   

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="select-none  group-hover:block hover:block transition-opacity duration-300  p-3 rounded-md bg-white absolute text-gray-700 w-[150px] left-0">
                <a asp-controller="Auth" asp-action="Logout" class="text-sm flex justify-start">Logout</a>
            </div>
            &copy; 2024 - CityTourist - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privallcy</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
